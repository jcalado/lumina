# Docker Environment Variables
# Copy this to .env and update with your actual values

# Database
DATABASE_URL=postgresql://lumina_user:secure_password_change_this@postgres:5432/lumina_production

# Database password (required for docker-compose)
DB_PASSWORD=your_secure_database_password

# Redis
REDIS_URL=redis://redis:6379

# Authentication
NEXTAUTH_SECRET=your-super-secure-production-secret-key-change-this
NEXTAUTH_URL=https://yourdomain.com

# Admin credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password

# S3 Configuration
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=your-production-bucket
S3_ACCESS_KEY=your-production-access-key
S3_SECRET_KEY=your-production-secret-key
S3_REGION=us-east-1

# File System
PHOTOS_ROOT_PATH=/var/app/photos

# Docker Volume Configuration (optional)
# Override default volume names if needed
PHOTOS_DATA=photos_data

# Sync Schedule (cron format)
SYNC_CRON=0 3 * * *
