# Production Environment Variables for MariaDB

# MariaDB Database Connection Components
# The DATABASE_URL will be constructed from these variables
DB_HOST="localhost"
DB_PORT="3306"
DB_DATABASE="lumina_production"
DB_USERNAME="lumina_user"
DB_PASSWORD="secure_password"
DB_CHARSET="utf8mb4"
DB_COLLATION="utf8mb4_unicode_ci"

# Alternative: Set DATABASE_URL directly if preferred
# DATABASE_URL="mysql://username:password@localhost:3306/lumina_production?charset=utf8mb4&collation=utf8mb4_unicode_ci"

# S3 Configuration (Production)
S3_ENDPOINT="https://s3.amazonaws.com"
S3_BUCKET="your-production-bucket"
S3_ACCESS_KEY="your-production-access-key"
S3_SECRET_KEY="your-production-secret-key"
S3_REGION="us-east-1"

# Redis (Production)
REDIS_URL="redis://your-redis-host:6379"

# Authentication (Production)
NEXTAUTH_SECRET="your-super-secure-production-secret-key"
NEXTAUTH_URL="https://yourdomain.com"
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="your-secure-admin-password"

# File System (Production)
PHOTOS_ROOT_PATH="/var/app/photos"

# Sync Schedule
SYNC_CRON="0 3 * * *"
